clean-runwordrec: clean-common clean-wordreccommon clean-utils
	($(CHDIR) $(LIPITK_SRC_UTILS_RUNWORDREC)/$(LINUX_x64_LOCATION); $(MAKE) -f Makefile.$(OS) clean)

###############################################################################
#
#  src/common
#
###############################################################################

common:
	($(CHDIR) $(LIPITK_SRC)/$(LINUX_x64_LOCATION); $(MAKE) -f Makefile.$(OS) common)

clean-common:
	($(CHDIR) $(LIPITK_SRC)/$(LINUX_x64_LOCATION); $(MAKE) -f Makefile.$(OS) $@)

###############################################################################
#
