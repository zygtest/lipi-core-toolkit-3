clean-wordreccommon:
	($(CHDIR) $(LIPITK_RECO)/$(LINUX_x64_LOCATION); $(MAKE) -f Makefile.$(OS) $@)

clean:
	$(ECHO) Making clean.
	list='$(SUBDIRS)'; for subdir in $$list; do \
	$(ECHO) "Making clean $$subdir"; \
	($(CHDIR) $(LIPITK_SRC_UTILS_RUN)/$$subdir/$(LINUX_x64_LOCATION) && $(MAKE) -f Makefile.$(OS) clean) \
	done;


