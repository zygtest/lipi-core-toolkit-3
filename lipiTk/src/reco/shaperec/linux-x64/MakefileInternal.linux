include $(LIPI_ROOT)/global.mk
SUBDIRS= common featureextractor nn preprocessing activedtw hmm

.PHONY : featureextractor all clean shapereccommon nn preprocessing activedtw HMM clean-common clean-featureextractor clean-nn clean-preprocessing clean-activedtw clean-HMM

all :	
	$(ECHO) Making ...
	list='$(SUBDIRS)'; for subdir in $$list; do \
	$(ECHO) "Making  $($subdir) directory... "; \
	($(CHDIR) $(LIPITK_SHAPEREC)/$$subdir/$(LINUX_x64_LOCATION) && $(MAKE) -f Makefile.$(OS) all) \
	done;
common:  
	($(CHDIR) $@; $(MAKE) -f Makefile.$(OS) all)

###########################################################################
#
#   Feature extractor MODULE
#
###########################################################################

featureextractor:  
	($(CHDIR) $(LIPITK_SHAPEREC_)/$(LINUX_x64_LOCATION); $(MAKE) -f Makefile.$(OS) all)	

clean-featureextractor:
	($(CHDIR) $(LIPITK_SHAPEREC_FE)/$(LINUX_x64_LOCATION); $(MAKE) -f Makefile.$(OS) clean )	

###########################################################################
#
#   NN
#
###########################################################################

nn : src-common utilslib shapereccommon featureextractor 
	($(CHDIR) $(LIPITK_SHAPEREC_NN)/$(LINUX_x64_LOCATION); $(MAKE) -f Makefile.$(OS) all)

clean-nn: clean-src-common clean-utilslib  clean-shapereccommon clean-featureextractor clean-preprocessing clean-lipiengine
	($(CHDIR) $(LIPITK_SHAPEREC_NN)/$(LINUX_x64_LOCATION); $(MAKE) -f Makefile.$(OS) clean )	

